{
  "version": "0.2.0",
  // for more information on the VS Code debugger, visit https://go.microsoft.com/fwlink/?linkid=830387
  "configurations": [
    // Main debug targets - all support Python + C++ debugging
    {
      "name": "Train Metta",
      "type": "pythoncpp",
      "request": "launch",
      "pythonLaunchName": "_Python: Train Metta",
      "cppAttachName": "_C++ Attach",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Sweep: Train",
      "type": "pythoncpp",
      "request": "launch",
      "pythonLaunchName": "_Python: Sweep Train",
      "cppAttachName": "_C++ Attach",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Evaluate",
      "type": "pythoncpp",
      "request": "launch",
      "pythonLaunchName": "_Python: Evaluate",
      "cppAttachName": "_C++ Attach",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Generate Replay",
      "type": "pythoncpp",
      "request": "launch",
      "pythonLaunchName": "_Python: Generate Replay",
      "cppAttachName": "_C++ Attach",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Play Metta",
      "type": "pythoncpp",
      "request": "launch",
      "pythonLaunchName": "_Python: Play Metta",
      "cppAttachName": "_C++ Attach",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Play Cogames",
      "type": "pythoncpp",
      "request": "launch",
      "pythonLaunchName": "_Python: Play Cogames",
      "cppAttachName": "_C++ Attach",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Evaluate Cogames",
      "type": "pythoncpp",
      "request": "launch",
      "pythonLaunchName": "_Python: Evaluate Cogames",
      "cppAttachName": "_C++ Attach",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "MettaGrid Demo",
      "type": "pythoncpp",
      "request": "launch",
      "pythonLaunchName": "_Python: MettaGrid Demo",
      "cppAttachName": "_C++ Attach",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Train Cogames",
      "type": "pythoncpp",
      "request": "launch",
      "pythonLaunchName": "_Python: Train Cogames",
      "cppAttachName": "_C++ Attach",
      "preLaunchTask": "${defaultBuildTask}",
    },

    // Hidden Python configurations (boilerplate extracted here)
    {
      "name": "_Python: Train Metta",
      "type": "debugpy",
      "request": "launch",
      "module": "metta.common.tool.run_tool",
      "args": ["recipes.experiment.scratchpad.${env:USER}.train"],
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/.venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "console": "integratedTerminal",
      "justMyCode": false,
      "presentation": { "hidden": true },
      "preLaunchTask": "${defaultBuildTask}",
      "stopOnEntry": true,
    },
    {
      "name": "_Python: Sweep Train",
      "type": "debugpy",
      "request": "launch",
      "module": "metta.tools.train",
      "args": [
        "+user=${env:USER}",
        "data_dir=./train_dir/sweep/${sweep_name}/runs",
        "dist_cfg_path=./train_dir/${env:USER}/dist_cfg.yaml",
      ],
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/.venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "console": "integratedTerminal",
      "justMyCode": false,
      "presentation": { "hidden": true },
      "preLaunchTask": "${defaultBuildTask}",
      "stopOnEntry": true,
    },
    {
      "name": "_Python: Evaluate",
      "type": "debugpy",
      "request": "launch",
      "module": "metta.common.tool.run_tool",
      "args": ["recipes.experiment.scratchpad.${env:USER}.evaluate"],
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/.venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "console": "integratedTerminal",
      "justMyCode": false,
      "presentation": { "hidden": true },
      "preLaunchTask": "${defaultBuildTask}",
      "stopOnEntry": true,
    },
    {
      "name": "_Python: Generate Replay",
      "type": "debugpy",
      "request": "launch",
      "module": "metta.common.tool.run_tool",
      "args": ["recipes.experiment.scratchpad.${env:USER}.replay"],
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/.venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "console": "integratedTerminal",
      "justMyCode": false,
      "presentation": { "hidden": true },
      "preLaunchTask": "${defaultBuildTask}",
      "stopOnEntry": true,
    },
    {
      "name": "_Python: Play Metta",
      "type": "debugpy",
      "request": "launch",
      "module": "metta.common.tool.run_tool",
      "args": ["recipes.experiment.scratchpad.${env:USER}.play"],
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/.venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "console": "integratedTerminal",
      "justMyCode": false,
      "presentation": { "hidden": true },
      "preLaunchTask": "${defaultBuildTask}",
      "stopOnEntry": true,
    },
    {
      "name": "_Python: Play Cogames",
      "type": "debugpy",
      "request": "launch",
      "module": "cogames.main",
      "args": ["missions"],
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/.venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "console": "integratedTerminal",
      "justMyCode": false,
      "presentation": { "hidden": true },
      "preLaunchTask": "${defaultBuildTask}",
      "stopOnEntry": true,
    },
    {
      "name": "_Python: Evaluate Cogames",
      "type": "debugpy",
      "request": "launch",
      "module": "cogames.main",
      "args": ["evaluate", "--mission=training_facility.harvest", "--policy=random", "--cogs=1"],
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/.venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "console": "integratedTerminal",
      "justMyCode": false,
      "presentation": { "hidden": true },
      "preLaunchTask": "${defaultBuildTask}",
      "stopOnEntry": true,
    },
    {
      "name": "_Python: MettaGrid Demo",
      "type": "debugpy",
      "request": "launch",
      "module": "mettagrid.demo",
      "args": ["--render", "unicode"],
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/.venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "console": "integratedTerminal",
      "preLaunchTask": "${defaultBuildTask}",
      "stopOnEntry": true,
      "justMyCode": false,
      "presentation": { "hidden": true },
    },
    {
      "name": "_Python: Train Cogames",
      "type": "debugpy",
      "request": "launch",
      "module": "cogames.main",
      "args": ["train", "-m", "machina_1"],
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/.venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "console": "integratedTerminal",
      "justMyCode": false,
      "presentation": { "hidden": true },
      "preLaunchTask": "${defaultBuildTask}",
      "stopOnEntry": true,
    },
    // Hidden C++ configuration (shared by all targets)
    {
      "name": "_C++ Attach",
      "type": "lldb",
      "request": "attach",
      "pid": "",
      "sourceMap": {
        ".": "${workspaceFolder}/packages/mettagrid",
      },
      "waitFor": true,
      "presentation": { "hidden": true },
    },
  ],
}
