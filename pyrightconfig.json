{
  "include": ["**/*.py"],
  "exclude": [
    "**/node_modules",
    "**/__pycache__",
    ".venv",
    "**/.bazel_output",
    "**/bazel-*",
    "wandb",
    "train_dir",
    "outputs",
    "checkpoints",
    "replays",
    "tmp",
    "build",
    "dist",
    "packages/pufferlib-core",
    "external",
    "personal",
    "metta-research",
    "notebooks/.ipynb_checkpoints",
    "**/.venv",
    "**/bindings/generated"
  ],
  "extraPaths": [
    "./agent/src",
    "./app_backend/src",
    "./common/src",
    "./packages/cogames/src",
    "./packages/mettagrid/python/src",
    "./packages/pufferlib-core/src"
  ],
  "typeCheckingMode": "basic",
  "reportMissingModuleSource": false,
  "pythonVersion": "3.12",
  "venvPath": ".",
  "venv": ".venv"
}
