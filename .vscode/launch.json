            "type": "debugpy",
            "request": "launch",
            "module": "tools.train",
            "args": [
                "+user=${env:USER}",
                "cmd=train",
            ],
        },
        {
            "name": "Run Sweep",
            "type": "debugpy",
            "request": "launch",
            "module": "tools.sweep",
            "args": [
                "+user=${env:USER}",
