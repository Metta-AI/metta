# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/metta_library?schema=public"

# Next.js
NEXTAUTH_URL="http://localhost:3001"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# Admin Configuration
# Bootstrap admin emails (comma-separated). These users get admin access without database flag.
# Can also be managed via database: UPDATE "user" SET "isAdmin" = true WHERE email = 'user@example.com';
ADMIN_EMAILS="admin@example.com"

# Dev mode - enables fake email provider for development
DEV_MODE=true

# Email Configuration
# Choose ONE method: AWS SES (production) OR SMTP (development/fallback)

# AWS SES (Production - preferred)
# AWS_SES_REGION=us-west-2
# AWS_SES_ACCESS_KEY_ID=AKIA...
# AWS_SES_SECRET_ACCESS_KEY=...

# SMTP (Development/Fallback)
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=your_smtp_api_key

# Email Settings (Required for either method)
# EMAIL_FROM_ADDRESS=notifications@yourdomain.com
# EMAIL_FROM_NAME=Library Notifications
ENABLE_EMAIL_NOTIFICATIONS=false

# Redis / BullMQ (for background job processing)
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_TLS=false

# Discord Bot Configuration (for DM notifications and OAuth)
# DISCORD_BOT_TOKEN=your-discord-bot-token
# DISCORD_CLIENT_ID=your-discord-client-id
# NEXT_PUBLIC_DISCORD_CLIENT_ID=your-discord-client-id
# DISCORD_CLIENT_SECRET=your-discord-client-secret
# DISCORD_REDIRECT_URI=http://localhost:3001/api/discord/auth

# Google OAuth (optional)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# S3 Storage Configuration (for image uploads)
# For development: Uses AWS_PROFILE (set in package.json scripts)
# For production: Use explicit keys OR IAM roles
AWS_S3_BUCKET=your-bucket-name
AWS_S3_REGION=us-east-1
# Optional explicit credentials (if not using AWS_PROFILE or IAM roles):
# AWS_S3_ACCESS_KEY_ID=your-s3-access-key
# AWS_S3_SECRET_ACCESS_KEY=your-s3-secret-key

# AWS Profile for local development (already set in package.json scripts)
# AWS_PROFILE=your-aws-profile

# LLM Services (optional)
# ANTHROPIC_API_KEY=your-anthropic-key
