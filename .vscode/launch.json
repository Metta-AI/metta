{
    "version": "0.2.0",
    // for more information on the VS Code debugger, visit https://go.microsoft.com/fwlink/?linkid=830387
    "configurations": [
        {
            "name": "Train Metta",
            "type": "debugpy",
            "request": "launch",
            "module": "tools.train",
            "args": [
                "+hardware=macbook",
                "+user=${env:USER}"
            ]
        },
        {
            "name": "Sweep: Init",
            "type": "debugpy",
            "request": "launch",
            "module": "tools.sweep_init",
            "args": [
                "+hardware=macbook",
                "+user=${env:USER}",
                "dist_cfg_path=${data_dir}/${env:USER}/dist_cfg.yaml"
            ]
        },
        {
            "name": "Sweep: Eval",
            "type": "debugpy",
            "request": "launch",
            "module": "tools.sweep_eval",
            "args": [
                "+hardware=macbook",
                "dist_cfg_path=./train_dir/${env:USER}/dist_cfg.yaml",
                "+user=${env:USER}"
            ]
        },
        {
            "name": "Sweep: Train",
            "type": "debugpy",
            "request": "launch",
            "module": "tools.train",
            "args": [
                "+hardware=macbook",
                "+user=${env:USER}",
                "data_dir=./train_dir/sweep/${sweep_name}/runs",
                "dist_cfg_path=./train_dir/${env:USER}/dist_cfg.yaml"
            ]
        },
        {
            "name": "Evaluate",
            "type": "debugpy",
            "request": "launch",
            "module": "tools.sim",
            "args": [
                "+user=${env:USER}",
                "+hardware=macbook",
                "cmd=sim"
            ]
        },
        {
            "name": "Analyze",
            "type": "debugpy",
            "request": "launch",
            "module": "tools.analyze",
            "args": [
                "+user=${env:USER}",
                "+hardware=macbook",
                "cmd=analyze"
            ]
        },
        {
            "name": "Generate Replay",
            "type": "debugpy",
            "request": "launch",
            "module": "tools.replay",
            "args": [
                "+user=${env:USER}",
                "+hardware=macbook"
            ]
        },
        {
            "name": "Play Metta",
            "type": "debugpy",
            "request": "launch",
            "module": "tools.play",
            "args": [
                "+user=${env:USER}",
                "+hardware=macbook"
            ]
        }
    ]
}
