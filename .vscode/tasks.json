{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "command": "uv sync --inexact",
      "label": "uv sync",
      "group": "build",
    },
    {
      "type": "shell",
      "command": "DEBUG=1 uv sync --reinstall-package mettagrid",
      "label": "uv sync debug",
      "group": "build",
      "options": {
        "env": {
          "DEBUG": "1",
        },
      },
    },
    {
      "type": "shell",
      "command": "bash ./mettascope/install.sh",
      "label": "build frontend",
      "group": "build",
    },
    {
      "label": "build all",
      "dependsOrder": "sequence",
      "dependsOn": ["uv sync"],
      "group": {
        "kind": "build",
        "isDefault": true,
      },
    },
  ],
}
