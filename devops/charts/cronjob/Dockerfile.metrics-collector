FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Copy everything
WORKDIR /app
COPY . .

# Install dependencies using existing pyproject.toml files
RUN pip install -e /app/packages/gitta
RUN pip install -e /app/common
RUN pip install -e /app/softmax

ENV PYTHONPATH="/app"

# Run metrics collector and push to Datadog
CMD ["python", "-m", "devops.datadog.cli", "collect", "--push"]
