{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Train Metta",
            "type": "debugpy",
            "request": "launch",
            "module": "tools.train",
            "args": [
                "+hardware=macbook",
                "+user=${env:USER}",
            ],
        },
        {
            "name": "Sweep: Init",
            "type": "debugpy",
            "request": "launch",
            "module": "tools.sweep_init",
            "args": [
                "+hardware=macbook",
                "+user=${env:USER}",
                "dist_cfg_path=${data_dir}/${env:USER}/dist_cfg.yaml",
            ],
        },
        {
            "name": "Sweep: Eval",
            "type": "debugpy",
            "request": "launch",
            "module": "tools.sweep_eval",
            "args": [
                "+hardware=macbook",
                "dist_cfg_path=./train_dir/${env:USER}/dist_cfg.yaml",
                "+user=${env:USER}",
            ],
        },
        {
            "name": "Sweep: Train",
            "type": "debugpy",
            "request": "launch",
            "module": "tools.train",
            "args": [
                "+hardware=macbook",
                "+user=${env:USER}",
                "data_dir=./train_dir/sweep/${sweep_name}/runs",
                "dist_cfg_path=./train_dir/${env:USER}/dist_cfg.yaml",
            ],
        }, {
            "name": "Play Metta",
            "type": "debugpy",
            "request": "launch",
            "module": "tools.play",
            "args": [
                "+user=${env:USER}",
                "+hardware=macbook",
                "cmd=play",
            ],
        },
        {
            "name": "Evaluate",
            "type": "debugpy",
            "request": "launch",
            "module": "tools.eval",
            "args": [
                "+user=${env:USER}",
                "+hardware=macbook",
                "cmd=eval",
            ],
        },
        {
            "name": "Analyze",
            "type": "debugpy",
            "request": "launch",
            "module": "tools.analyze",
            "args": [
                "+user=${env:USER}",
                "+hardware=macbook",
                "cmd=analyze",
            ],
        },
        {
            "name": "Generate Replay",
            "type": "debugpy",
            "request": "launch",
            "module": "tools.replay",
            "args": [
                "+user=${env:USER}",
                "+hardware=macbook",
            ],
        },
    ],
}
