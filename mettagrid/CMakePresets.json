{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "debug",
      "inherits": "base",
      "description": "Debug build with unit tests and coverage (no benchmarks)",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTS": "ON",
        "BUILD_BENCHMARKS": "OFF",
        "ENABLE_COVERAGE": "ON"
      },
      "binaryDir": "${sourceDir}/build-debug"
    },
    {
      "name": "release",
      "inherits": "base",
      "description": "Release build (no tests)",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_TESTS": "OFF",
        "BUILD_BENCHMARKS": "OFF"
      },
      "binaryDir": "${sourceDir}/build-release"
    },
    {
      "name": "benchmark",
      "inherits": "base",
      "description": "Release build with benchmarks only",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_TESTS": "ON",
        "BUILD_BENCHMARKS": "ON"
      },
      "binaryDir": "${sourceDir}/build-release"
    }
  ]
}
