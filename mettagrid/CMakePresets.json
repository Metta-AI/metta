{
  "version": 3,
  "configurePresets": [
    {
      "name": "debug",
      "description": "Debug build with tests",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTS": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      },
      "binaryDir": "${sourceDir}/build-debug"
    },
    {
      "name": "debug-gdb",
      "description": "Enhanced debug build optimized for GDB/LLDB with full symbols",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTS": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_C_FLAGS_DEBUG": "-g3 -ggdb -O0 -fno-omit-frame-pointer -fno-inline -DDEBUG",
        "CMAKE_CXX_FLAGS_DEBUG": "-g3 -ggdb -O0 -fno-omit-frame-pointer -fno-inline -DDEBUG"
      },
      "binaryDir": "${sourceDir}/build-debug-gdb"
    },
    {
      "name": "coverage",
      "description": "Debug build with tests and coverage",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTS": "ON",
        "ENABLE_COVERAGE": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      },
      "binaryDir": "${sourceDir}/build-coverage"
    },
    {
      "name": "release",
      "description": "Release build with tests",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_TESTS": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      },
      "binaryDir": "${sourceDir}/build-release"
    },
    {
      "name": "release-no-tests",
      "description": "Release build without tests",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_TESTS": "OFF",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      },
      "binaryDir": "${sourceDir}/build-release-no-tests"
    }
  ]
}
