{
  "name": "@softmax/mettascope",
  "version": "1.0.0",
  "description": "MettaScope - a tool for visualizing and analyzing Metta AI's environments",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "lint": "pnpm run lint:eslint && pnpm run lint:prettier",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "format": "prettier --write .",
    "server": "python -m http.server 8000",
    "playwright:install": "playwright install --with-deps",
    "test": "playwright test tests/*.test.ts"
  },
  "devDependencies": {
    "@eslint/css": "^0.10.0",
    "@eslint/js": "^9.32.0",
    "@playwright/test": "1.54.1",
    "@webgpu/types": "0.1.38",
    "eslint": "^9.32.0",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "playwright": "1.54.1",
    "typescript": "5.2.2",
    "typescript-eslint": "^8.38.0"
  }
}
