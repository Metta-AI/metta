#!/bin/bash
set -e

# Get the directory of this script
SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
REPO_ROOT="$(cd "$SCRIPT_DIR/../.." && pwd)"

# Source common functions
source "$REPO_ROOT/devops/tools/common.sh"

ensure_uv_setup

# Run metta lint on staged files only
if ! uv run metta lint --staged; then
    echo "‚ùå Linting failed. Please fix the issues before committing."
    exit 1
fi

# No output on success - GitHub Desktop works better with silent success
exit 0
