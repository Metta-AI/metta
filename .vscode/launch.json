{
  "version": "0.2.0",
  // for more information on the VS Code debugger, visit https://go.microsoft.com/fwlink/?linkid=830387
  "configurations": [
    {
      "name": "Train Metta",
      "type": "debugpy",
      "request": "launch",
      "module": "metta.common.tool.run_tool",
      "args": ["recipes.experiment.scratchpad.${env:USER}.train"],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Sweep: Init",
      "type": "debugpy",
      "request": "launch",
      "module": "tools.sweep_init",
      "args": ["+user=${env:USER}", "dist_cfg_path=${data_dir}/${env:USER}/dist_cfg.yaml"],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Sweep: Eval",
      "type": "debugpy",
      "request": "launch",
      "module": "tools.sweep_eval",
      "args": ["+user=${env:USER}", "dist_cfg_path=./train_dir/${env:USER}/dist_cfg.yaml"],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Sweep: Train",
      "type": "debugpy",
      "request": "launch",
      "module": "tools.train",
      "args": [
        "+user=${env:USER}",
        "data_dir=./train_dir/sweep/${sweep_name}/runs",
        "dist_cfg_path=./train_dir/${env:USER}/dist_cfg.yaml",
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Evaluate",
      "type": "debugpy",
      "request": "launch",
      "module": "metta.common.tool.run_tool",
      "args": ["recipes.experiment.scratchpad.${env:USER}.evaluate"],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Generate Replay",
      "type": "debugpy",
      "request": "launch",
      "module": "metta.common.tool.run_tool",
      "args": ["recipes.experiment.scratchpad.${env:USER}.replay"],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Play Metta",
      "type": "debugpy",
      "request": "launch",
      "module": "metta.common.tool.run_tool",
      "args": ["recipes.experiment.scratchpad.${env:USER}.play"],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Play Cogames",
      "type": "debugpy",
      "request": "launch",
      "module": "cogames.main",
      "args": ["missions"],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Evaluate Cogames",
      "type": "debugpy",
      "request": "launch",
      "module": "cogames.main",
      "args": ["evaluate", "--mission=training_facility.harvest", "--policy=random", "--cogs=1"],
      "cwd": "${workspaceFolder}",
    },
    {
      "name": "MettaGrid Demo",
      "type": "debugpy",
      "request": "launch",
      "module": "mettagrid.demo",
      "args": ["--render", "unicode"],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Train Cogames",
      "type": "debugpy",
      "request": "launch",
      "module": "cogames.main",
      "args": ["train", "-m", "machina_1"],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "MettaGrid Debug",
      "type": "pythoncpp",
      "request": "launch",
      "pythonLaunchName": "_MettaGrid Python Config",
      "cppAttachName": "_MettaGrid C++ Config",
      "preLaunchTask": "${defaultBuildTask}"
    },
    {
      "name": "MettaGrid Debug Attach C++",
      "type": "lldb",
      "request": "attach",
      "pid": "${command:pickProcess}",
      "sourceMap": {
        ".": "${workspaceFolder}/packages/mettagrid"
      },
      "waitFor": true
    },
    {
      "name": "_MettaGrid Python Config",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/packages/mettagrid/demos/demo_train_pettingzoo.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "stopOnEntry": true,
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/.venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}"
      },
      "presentation": {
        "hidden": true
      }
    },
    {
      "name": "_MettaGrid C++ Config",
      "type": "lldb",
      "request": "attach",
      "pid": "",
      "sourceMap": {
        ".": "${workspaceFolder}/packages/mettagrid"
      },
      "waitFor": true,
      "presentation": {
        "hidden": true
      }
    }
  ]
}
