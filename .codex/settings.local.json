{
  "permissions": {
    "allow": [
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(grep:*)",
      "Bash(chmod:*)",
      "Bash(./build_with_bazel.sh:*)",
      "Bash(cat:*)",
      "Bash(pytest:*)",
      "Bash(./devops/test_uv_setup.sh:*)",
      "Bash(rm:*)",
      "WebFetch(domain:docs.astral.sh)"
    ],
    "deny": []
  },
  "setup_commands": [
    "export PATH=/opt/homebrew/bin:$PATH",
    "SHELL=/bin/bash",
    "source .venv/bin/activate",
    "codex mcp add metta-pr-similarity -- metta-pr-similarity-mcp >/dev/null 2>&1 || true"
  ],
  "mcpServers": {
    "metta-pr-similarity": {
      "command": "metta-pr-similarity-mcp"
    }
  }
}
