#!/bin/bash

# Get current date and timestamp
DATE=$(date +%Y%m%d_%H%M%S)

# Run the training command
echo "Starting training run: cc.$USER.test.$DATE"
uv run ./tools/run.py experiments.recipes.arena.train --args run=cc.$USER.test.$DATE --overrides trainer.total_timesteps=10000 wandb.enabled=false

echo "Training run cc.$USER.test.$DATE completed!"
