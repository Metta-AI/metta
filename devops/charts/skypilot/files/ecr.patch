+            if not is_ecr_server(server):
+                return server
+
+            az = None
+            try:
+                az = self._run("ec2metadata | fgrep availability-zone: | awk '{print $2}'")
+            except Exception as e:
+                logger.error(f'Failed to patch ECR server, maybe not running on AWS: {e}')
+
