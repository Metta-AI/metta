{
  "version": "0.2.0",
  // for more information on the VS Code debugger, visit https://go.microsoft.com/fwlink/?linkid=830387
  "configurations": [
    {
      "name": "Train Metta",
      "type": "debugpy",
      "request": "launch",
      "module": "tools.run",
      "args": ["experiments.recipes.scratchpad.${env:USER}.train"],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Sweep: Init",
      "type": "debugpy",
      "request": "launch",
      "module": "tools.sweep_init",
      "args": ["+user=${env:USER}", "dist_cfg_path=${data_dir}/${env:USER}/dist_cfg.yaml"],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Sweep: Eval",
      "type": "debugpy",
      "request": "launch",
      "module": "tools.sweep_eval",
      "args": ["+user=${env:USER}", "dist_cfg_path=./train_dir/${env:USER}/dist_cfg.yaml"],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Sweep: Train",
      "type": "debugpy",
      "request": "launch",
      "module": "tools.train",
      "args": [
        "+user=${env:USER}",
        "data_dir=./train_dir/sweep/${sweep_name}/runs",
        "dist_cfg_path=./train_dir/${env:USER}/dist_cfg.yaml",
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Evaluate",
      "type": "debugpy",
      "request": "launch",
      "module": "tools.run",
      "args": ["experiments.recipes.arena.evaluate"],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Dashboard",
      "type": "debugpy",
      "request": "launch",
      "module": "tools.dashboard",
      "args": ["+user=${env:USER}"],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Analyze",
      "type": "debugpy",
      "request": "launch",
      "module": "tools.run",
      "args": ["experiments.recipes.arena.analyze"],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Generate Replay",
      "type": "debugpy",
      "request": "launch",
      "module": "tools.run",
      "args": ["experiments.recipes.arena.replay"],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Play Metta",
      "type": "debugpy",
      "request": "launch",
      "module": "tools.run",
      "args": ["experiments.recipes.arena.play"],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Play Cogames",
      "type": "debugpy",
      "request": "launch",
      "module": "cogames.main",
      "args": ["play", "machina_2", "--render", "text"],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}",
    },
  ],
}
