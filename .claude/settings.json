{
  "permissions": {
    "allow": [
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(grep:*)",
      "Bash(chmod:*)",
      "Bash(./build_with_bazel.sh:*)",
      "Bash(cat:*)",
      "Bash(pytest:*)",
      "Bash(./devops/test_uv_setup.sh:*)",
      "WebFetch(domain:docs.astral.sh)",
      "Bash(ruff check:*)",
      "Bash(metta configure:*)",
      "Bash(metta status:*)",
      "Bash(metta install:*)",
      "Bash(metta test:*)",
      "Bash(./install.sh:*)"
    ],
    "deny": []
  },
  "mcpServers": {
    "metta-pr-similarity": {
      "command": "metta-pr-similarity-mcp"
    }
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --no-sync python -m metta.setup.tools.code_formatters --verbose --fix \"$CLAUDE_FILE_PATHS\""
          }
        ]
      }
    ]
  }
}
