{
  "version": "0.2.0",
  // for more information on the VS Code debugger, visit https://go.microsoft.com/fwlink/?linkid=830387
  "configurations": [
    {
      "name": "Train Metta",
      "type": "debugpy",
      "request": "launch",
      "module": "tools.train",
      "args": ["+user=${env:USER}"],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Sweep: Init",
      "type": "debugpy",
      "request": "launch",
      "module": "tools.sweep_init",
      "args": ["+user=${env:USER}", "dist_cfg_path=${data_dir}/${env:USER}/dist_cfg.yaml"],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Sweep: Eval",
      "type": "debugpy",
      "request": "launch",
      "module": "tools.sweep_eval",
      "args": ["+user=${env:USER}", "dist_cfg_path=./train_dir/${env:USER}/dist_cfg.yaml"],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Sweep: Train",
      "type": "debugpy",
      "request": "launch",
      "module": "tools.train",
      "args": [
        "+user=${env:USER}",
        "data_dir=./train_dir/sweep/${sweep_name}/runs",
        "dist_cfg_path=./train_dir/${env:USER}/dist_cfg.yaml",
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Evaluate",
      "type": "debugpy",
      "request": "launch",
      "module": "tools.sim",
      "args": ["+user=${env:USER}", "cmd=sim"],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Dashboard",
      "type": "debugpy",
      "request": "launch",
      "module": "tools.dashboard",
      "args": ["+user=${env:USER}"],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Analyze",
      "type": "debugpy",
      "request": "launch",
      "module": "tools.analyze",
      "args": ["+user=${env:USER}", "cmd=analyze"],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Generate Replay",
      "type": "debugpy",
      "request": "launch",
      "module": "tools.replay",
      "args": ["--func=experiments.arena.arena.make_replay_tool_cfg"],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Play Metta",
      "type": "debugpy",
      "request": "launch",
      "module": "tools.play",
      "args": ["--func=experiments.arena.arena.make_play_tool_cfg"],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Test",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-v", "-s", "./tests"],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "MettaGridTest",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [],
      "cwd": "${workspaceFolder}/mettagrid",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}",
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}",
    },
  ],
}
