{
  "version": "0.2.0",
  // for more information on the VS Code debugger, visit https://go.microsoft.com/fwlink/?linkid=830387
  "configurations": [
    {
      "name": "Train Metta",
      "type": "debugpy",
      "request": "launch",
      "module": "tools.train",
      "args": [
        "+hardware=macbook",
        "+user=${env:USER}"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}"
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}"
    },
    {
      "name": "Sweep: Init",
      "type": "debugpy",
      "request": "launch",
      "module": "tools.sweep_init",
      "args": [
        "+hardware=macbook",
        "+user=${env:USER}",
        "dist_cfg_path=${data_dir}/${env:USER}/dist_cfg.yaml"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}"
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}"
    },
    {
      "name": "Sweep: Eval",
      "type": "debugpy",
      "request": "launch",
      "module": "tools.sweep_eval",
      "args": [
        "+hardware=macbook",
        "+user=${env:USER}",
        "dist_cfg_path=./train_dir/${env:USER}/dist_cfg.yaml"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}"
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}"
    },
    {
      "name": "Sweep: Train",
      "type": "debugpy",
      "request": "launch",
      "module": "tools.train",
      "args": [
        "+hardware=macbook",
        "+user=${env:USER}",
        "data_dir=./train_dir/sweep/${sweep_name}/runs",
        "dist_cfg_path=./train_dir/${env:USER}/dist_cfg.yaml"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}"
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}"
    },
    {
      "name": "Evaluate",
      "type": "debugpy",
      "request": "launch",
      "module": "tools.sim",
      "args": [
        "+user=${env:USER}",
        "+hardware=macbook",
        "cmd=sim"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}"
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}"
    },
    {
      "name": "Dashboard",
      "type": "debugpy",
      "request": "launch",
      "module": "tools.dashboard",
      "args": [
        "+user=${env:USER}",
        "+hardware=macbook"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}"
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}"
    },
    {
      "name": "Analyze",
      "type": "debugpy",
      "request": "launch",
      "module": "tools.analyze",
      "args": [
        "+user=${env:USER}",
        "+hardware=macbook",
        "cmd=analyze"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}"
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}"
    },
    {
      "name": "Generate Replay",
      "type": "debugpy",
      "request": "launch",
      "module": "tools.replay",
      "args": [
        "+user=${env:USER}",
        "+hardware=macbook"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}"
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}"
    },
    {
      "name": "Play Metta",
      "type": "debugpy",
      "request": "launch",
      "module": "tools.play",
      "args": [
        "+user=${env:USER}",
        "+hardware=macbook"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}"
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}"
    },
    {
      "name": "Test",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-v",
        "-s",
        "./tests"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}"
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}"
    },
    {
      "name": "MettaGridTest",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [],
      "cwd": "${workspaceFolder}/mettagrid",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "UV_PROJECT_ENVIRONMENT": "${env:VIRTUAL_ENV}"
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "preLaunchTask": "${defaultBuildTask}"
    },
    {
      "name": "C++ Debug: Train Metta",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/.venv/bin/python",
      "args": [
        "-m", "tools.train",
        "+hardware=macbook",
        "+user=${env:USER}"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
        {
          "name": "PYTHONPATH",
          "value": "${workspaceFolder}"
        },
        {
          "name": "UV_PROJECT_ENVIRONMENT",
          "value": "${env:VIRTUAL_ENV}"
        }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set breakpoint pending",
          "text": "set breakpoint pending on"
        }
      ],
      "preLaunchTask": "install-debug"
    },
    {
      "name": "C++ Debug: Test",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/.venv/bin/python",
      "args": [
        "-m", "pytest",
        "-v", "-s",
        "./tests"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
        {
          "name": "PYTHONPATH",
          "value": "${workspaceFolder}"
        },
        {
          "name": "UV_PROJECT_ENVIRONMENT",
          "value": "${env:VIRTUAL_ENV}"
        }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set breakpoint pending",
          "text": "set breakpoint pending on"
        }
      ],
      "preLaunchTask": "install-debug"
    },
    {
      "name": "C++ Debug: Play Metta",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/.venv/bin/python",
      "args": [
        "-m", "tools.play",
        "+user=${env:USER}",
        "+hardware=macbook"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
        {
          "name": "PYTHONPATH",
          "value": "${workspaceFolder}"
        },
        {
          "name": "UV_PROJECT_ENVIRONMENT",
          "value": "${env:VIRTUAL_ENV}"
        }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set breakpoint pending",
          "text": "set breakpoint pending on"
        }
      ],
      "preLaunchTask": "install-debug"
    }
  ]
}
